# Pokemon LLM Environment Variables
# Copy this file to .env and fill in your API keys and ROM path

# Game ROM Configuration (ROMs should be placed in roms/ folder)
POKEMON_ROM=red.gb

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=o3

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-preview-05-20

# Anthropic Claude
ANTHOPIC_API_KEY=your_anthropic_api_key_here
ANTHOPIC_MODEL=claude-sonnet-4-20250514

# Groq
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=meta-llama/llama-4-maverick-17b-128e-instruct

# xAI Grok
GROK_API_KEY=your_grok_api_key_here
GROK_MODEL=grok-3-mini

# Together AI
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=Qwen/Qwen2.5-VL-72B-Instruct

# Z.AI (GLM) with MCP Vision Server Support
ZAI_API_KEY=your_zai_api_key_here
